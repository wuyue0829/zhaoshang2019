                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/tv_shanchu"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:inputType="numberSigned|numberDecimal"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_marginRight="10dp"
                            android:maxLength="14"
                            android:maxLines="1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_quanzhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_yuan"
                            android:layout_centerVertical="true"
                            android:text="权重:"
                            android:textColor="@color/black1" />

                        <EditText
                            android:id="@+id/et_chanchuqz"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/tv_quanzhong"
                            android:background="@null"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:inputType="numberDecimal"
                            android:maxLength="14"
                            android:maxLines="1"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/et_chanchuqz"
                            android:layout_marginLeft="20dp"
                            android:text="%" />

                        <TextView
                            android:id="@+id/tv_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ed_chanchushouru"
                            android:layout_marginRight="10dp"
                            android:text="元" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black2">

                    </View>

                    <RelativeLayout
