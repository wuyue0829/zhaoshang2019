<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_last"
        android:layout_width="9dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@+id/cd_content"
        android:background="@color/white"
        android:visibility="invisible">

    </TextView>

    <ImageView
        android:id="@+id/im_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_jdjh"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cd_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="45dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/im_state"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="45dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_jdzk"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"/>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="策划"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ly_contnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>